/* my additions 

    adding 2 structs to hold the data for live processing

*/

#[derive(Clone, Copy, Debug)]
pub struct ImuSample {
    pub ts_us: i64,                // timestamp aligned to video clock (Âµs)
    pub gyro: [f64; 3],            // rad/s
    pub accel: Option<[f64; 3]>,   // m/s^2
}

pub struct ImuRing {
    buf: VecDeque<ImuSample>,
    keep_us: i64,  // e.g. 3_000_000 (keep last 3s)
}
